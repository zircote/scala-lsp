{
  "description": "Scala development hooks for automated formatting, linting, and testing",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PLUGIN_ROOT/hooks/scripts/scala-hooks.sh\"",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
